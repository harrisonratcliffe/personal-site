---
const { title, subtitle, period, desc } = Astro.props;
---

<div class="flex">
    <div class="education__time">
        <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
        <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
    </div>
    <div class="experience__data bd-grid px-5">
        <h3 class="font-semibold mb-1">{title} <span class="font-medium text-xs">({period})</span></h3>
        <span class="font-medium text-sm">{subtitle}</span>
        <p class="my-2 text-justify text-sm">
            {desc}
        </p>
    </div>
</div>
